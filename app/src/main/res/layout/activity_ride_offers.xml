<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ride_offers_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_vertical_standard_value"
        android:layout_marginEnd="@dimen/layout_vertical_standard_value"
        android:layout_marginStart="@dimen/layout_vertical_standard_value"
        android:layout_marginTop="@dimen/layout_vertical_standard_value"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="382dp"
        android:layout_height="511dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:background="@color/white">

        <ImageView
            android:id="@+id/imageView_1st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:onClick="onAnyButtonClicked"

            app:srcCompat="@android:drawable/sym_def_app_icon"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="211dp" />

        <ImageView
            android:id="@+id/imageView_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:onClick="onAnyButtonClicked"

            android:layout_column="0"
            android:layout_row="1"
            app:srcCompat="@drawable/bicycle" />

        <ImageView
            android:id="@+id/imageView_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:onClick="onAnyButtonClicked"

            android:layout_column="0"
            android:layout_row="2"
            app:srcCompat="@drawable/taxi" />

        <ImageView
            android:id="@+id/imageView_4th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:onClick="onAnyButtonClicked"

            android:layout_column="0"
            android:layout_row="3"
            app:srcCompat="@drawable/bus" />


        <TextView
            android:id="@+id/editText_1st"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_column="1"
            android:layout_row="0"
            android:ems="10"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:minLines="2"
            android:text="@string/ride_offer_scpaceship" />

        <TextView
            android:id="@+id/editText_2nd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_column="1"
            android:layout_row="1"
            android:ems="10"
            android:maxLines="3"
            android:minLines="2"
            android:inputType="textMultiLine"
            android:text="@string/ride_offer_bicycle" />

        <TextView
            android:id="@+id/editText_3rd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_column="1"
            android:layout_row="2"
            android:ems="10"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:minLines="2"
            android:text="Taxi\n10 min, 17 Leaves" />

        <TextView
            android:id="@+id/editText_4th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_column="1"
            android:layout_row="3"
            android:ems="10"
            android:inputType="textMultiLine"
            android:maxLines="3"
            android:minLines="2"
            android:text="@string/ride_offer_bus" />

    </GridLayout>

</android.support.constraint.ConstraintLayout>